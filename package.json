{
  "name": "openapi-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bash -c 'tsx scripts/start-proxy.ts \"$(pwd)/openapi.json\" \"http://localhost:3000\"'",
    "test": "vitest run",
    "test:dev": "vitest watch",
    "build": "tsc -build && node scripts/build-cli.js",
    "dev": "tsx watch scripts/start-proxy.ts"
  },
  "bin": {
    "openapi-mcp-server": "./dist/cli.cjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.3",
    "axios": "^1.7.9",
    "openapi-client-axios": "^7.5.5",
    "openapi-schema-validator": "^12.1.3",
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/which": "^3.0.4",
    "chalk": "^5.3.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8",
    "which": "^5.0.0"
  },
  "description": "OpenAPI Model Context Protocol Proxy",
  "main": "./dist/cli.js",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=16"
  }
}
